		{
			"name": "Create Pet",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const petId = Math.round(Math.random() * 100000);",
							"const petName = `Pet_${Math.random().toString(36).substring(2,7)}`;",
							"",
							"pm.collectionVariables.set('petId', petId);",
							"pm.collectionVariables.set('petName', petName);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"let responseData = pm.response.json();",
							"",
							"",
							"pm.test('Status code is 200', () => {",
							"    pm.response.to.have.status(200);",
							"}); ",
							"",
							"pm.test('Pet ID is correct', () => {",
							"    pm.expect(responseData.id).to.eql(pm.collectionVariables.get('petId'));",
							"});",
							"",
							"pm.test('Pet name is correct', () => {",
							"    pm.expect(responseData.name).to.eql(pm.collectionVariables.get('petName'));",
							"})"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": {{petId}},\n    \"category\": {\n        \"id\": {{$randomInt}},\n        \"name\": \"Cat_{{$randomWord}}\"\n    },\n    \"name\": \"{{petName}}\",\n    \"photoUrls\": [\n        \"https://test.com/photo.jpg\"\n    ],\n    \"tags\": [\n        {\n            \"id\": {{$randomInt}},\n            \"name\": \"Tag_{{$randomWord}}\"\n        }\n    ],\n    \"status\": \"available\"\n}"
				},
				"url": {
